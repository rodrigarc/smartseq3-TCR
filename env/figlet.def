Bootstrap: docker
From: ubuntu:20.04

IncludeCmd: yes

%runscript
    figlet "$@"

%environment
    export LC_ALL=C
    export PATH=/usr/games:$PATH

%post
    # Install figlet while ignoring security labeling errors
    apt-get update
    apt-get -y install figlet

%labels
  Adapted from https://github.com/icaoberg/singularity-figlet/blob/master/Singularity
